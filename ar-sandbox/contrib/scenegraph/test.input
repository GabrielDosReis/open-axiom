)clear all
DF ==> DoubleFloat
fnsin(x:DF):DF == sin(x/100::DF)*400::DF
fntan(x:DF):DF == tan(x/100::DF)*400::DF
PT ==> SCartesian(2)
BOUNDS ==> Record(mins:PT,maxs:PT)
view:BOUNDS := [sipnt(0,-500)$PT,sipnt(1200,500)$PT]
sc := createSceneRoot(view)$Scene(PT)
gd := addSceneGrid(sc,view)$Scene(PT)
writeSvg(sc,"test1.svg")
mt1 := addSceneMaterial(sc,3::DF,"blue","green")$Scene(PT)
ln1 := addPlot1Din2D(mt1,fnsin,0..1000::DF,49)$Scene(PT)
writeSvg(sc,"test2.svg")
mt2 := addSceneMaterial(sc,3::DF,"green","green")$Scene(PT)
tr2 := addSceneTransform(mt2,stransform([_
    [1::DF,0::DF,0::DF],_
    [0::DF,1::DF,0::DF],_
    [0::DF,0::DF,1::DF]]))$Scene(PT)
bb:BOUNDS := [sipnt(100,-400)$PT,sipnt(1100,400)$PT]
bb2 := addSceneClip(tr2,bb)$Scene(PT)
ln2 := addPlot1Din2D(bb2,fntan,0..1000::DF,49)$Scene(PT)
tx := addSceneText(sc,"sin(theta)",32::NNI,sipnt(200,400)$PT)$Scene(PT)
writeSvg(sc,"test3.svg")
